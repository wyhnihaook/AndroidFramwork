<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主体背景颜色值 -->
    <item>
        <shape>
            <gradient
                android:angle="360"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#94A12C"
                android:startColor="#E0FB10"
                android:type="linear" />
            <!-- 圆角 -->
            <corners android:radius="6dp" />
        </shape>
    </item>

<!--    上层不透明度设置-->
    <item>   
        <shape>       
            <solid android:color="#80000000" /> 
        </shape>
           
    </item>

</layer-list>